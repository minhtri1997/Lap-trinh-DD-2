<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cooking">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateRecipeActivity"
            android:label="@string/create_cooking_recipe" />
        <activity
            android:name=".ShoppingListActivity"
            android:label="@string/create_shopping_list" />
        <activity android:name=".RecipeActivity" />
        <activity
            android:name=".LoginActivity"
            android:label="@string/login" />
        <activity
            android:name=".RegisterActivity"
            android:label="Đăng kí" />
        <activity
            android:name=".ProfileActivity"
            android:label="Trang cá nhân" />
        <activity android:name=".SPLResultActivity" />
        <activity
            android:name=".ReviewRecipeActivity"
            android:label="Công thức đã viết" />
        <activity
            android:name=".ReviewShoppingListActivity"
            android:label="Danh sách Shopping list" />
        <activity
            android:name=".ReviewNoteActivity"
            android:label="Note" />
        <activity
            android:name=".EditRecipeActivity"
            android:label="Sửa công thức" />
    </application>

</manifest>